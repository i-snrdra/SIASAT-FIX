<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SIASAT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Custom attributes -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="android:navigationBarColor">@color/background</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.SIASAT.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.SIASAT.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.SIASAT.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.SIASAT.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.SIASAT.Button</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.SIASAT.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.SIASAT.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.SIASAT.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.SIASAT.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.SIASAT.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Custom Styles -->
    <style name="Widget.SIASAT.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="Widget.SIASAT.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.SIASAT.Button</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>